# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,json,css,scss,yml,yaml}]
indent_size = 2

[*.py]
indent_size = 4


[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[Makefile]
indent_style = tab

[*.{bash,sh,zsh}]
indent_size = 4

[*.{vim,nvim}]
indent_size = 2

[{package.json,*.yml,*.yaml}]
indent_size = 2

[*.git*]
indent_size = 4