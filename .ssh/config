# SSH Client Configuration Template
# Copy this to ~/.ssh/config and customize as needed

# Include machine-specific configurations (not tracked in git)
Include ~/.ssh/config.local

# Global defaults
Host *
    # Security
    PasswordAuthentication no
    ChallengeResponseAuthentication no
    PubkeyAuthentication yes
    StrictHostKeyChecking ask
    IdentityAgent "/Users/cassiano/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"

    # Performance
    Compression yes
    ServerAliveInterval 60
    ServerAliveCountMax 3
    TCPKeepAlive yes

    # Multiplexing for faster connections
    ControlMaster auto
    ControlPath ~/.ssh/sockets/%r@%h-%p
    ControlPersist 600

    # Fix terminal type for Ghostty (remote servers lack its terminfo)
    SetEnv TERM=xterm-256color

    # Use ssh-agent for key management
    AddKeysToAgent yes

    # Default identity file
    IdentitiesOnly yes

# Personal GitHub
Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/personal/github

# Example
# Host myserver
#     HostName server.example.com
#     User myusername
#     Port 22
#     IdentityFile ~/.ssh/id_rsa
#     ForwardAgent yes