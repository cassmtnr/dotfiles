# SSH Client Configuration Template
# Copy this to ~/.ssh/config and customize as needed

# Global defaults
Host *
    # Security
    PasswordAuthentication no
    ChallengeResponseAuthentication no
    PubkeyAuthentication yes
    StrictHostKeyChecking ask

    # Performance
    Compression yes
    ServerAliveInterval 60
    ServerAliveCountMax 3
    TCPKeepAlive yes

    # Multiplexing for faster connections
    ControlMaster auto
    ControlPath ~/.ssh/sockets/%r@%h-%p
    ControlPersist 600

    # Use ssh-agent for key management
    AddKeysToAgent yes

    # Default identity file
    IdentitiesOnly yes

# Personal GitHub
Host github.com
    HostName github.com
    User cassmtnr
    IdentityFile ~/.ssh/personal/github

# Work GitLab
Host gitlab.dev.codefactory.sh
    HostName gitlab.dev.codefactory.sh
    Port 7999
    User git
    AddKeysToAgent yes
    PreferredAuthentications publickey
    IdentityFile ~/.ssh/work/gitlab


# Example
# Host myserver
#     HostName server.example.com
#     User myusername
#     Port 22
#     IdentityFile ~/.ssh/id_rsa
#     ForwardAgent yes